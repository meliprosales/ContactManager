@model ContactManager.Web.Models.ContactViewModel

<h2>Create a new contact</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="FirstName">FirstName:</label>
        <input type="text" id="FirstName" name="FirstName" class="form-control" asp-for="FirstName" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="LastName">LastName:</label>
        <input type="text" id="LastName" name="LastName" class="form-control" asp-for="LastName" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group ui-widget">
        <label for="FormattedAddress">Address</label>
        <input type="text" class="form-control" id="FormattedAddress" name="FormattedAddress" asp-for="FormattedAddress">
        <span asp-validation-for="FormattedAddress" class="text-danger"></span>
    </div>

    <div id="myMap" style="position:relative;width:100%;min-width:100px;height:290px;background-color:gray; margin-top:2px">
    </div>

    <div class="form-group">
        <label for="Street">Street</label>
        <input type="text" id="addressLineTbx" name="Street" class="form-control" readonly asp-for="Street">
        <span asp-validation-for="Street" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="City">City</label>
        <input type="text" id="cityTbx" name="City" class="form-control" readonly asp-for="City">
        <span asp-validation-for="City" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="State">State</label>
        <input type="text" id="stateTbx" name="State" class="form-control" readonly asp-for="State">
        <span asp-validation-for="State" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="PostalCode">PostalCode</label>
        <input type="text" id="postalCodeTbx" name="PostalCode" class="form-control" readonly asp-for="PostalCode">
        <span asp-validation-for="PostalCode" class="text-danger"></span>
    </div>


    <br/>
    <button type="submit" class="btn btn-primary">Create</button>
}


